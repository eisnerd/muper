<Window x:Class="WpfMpdClient.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UpdateWindow" Height="80" Width="300" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
   <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Margin="2" >Downloading update...</TextBlock>
    <ProgressBar Grid.Row="1" Margin="2" Height="20" Name="pgbProgress" />
  </Grid>
</Window>
